    justify-content: center;
    color: #333;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.2s ease;
  }
  
  .socialIcon:hover {
    background-color: #c1522e;
    color: white;
    transform: translateY(-2px);
  }
  
  .hours {
    color: #666;
  }
  
  .backLink {
    display: inline-block;
    margin: 2rem 0;
